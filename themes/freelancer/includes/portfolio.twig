    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="page-section portfolio">
        <div class="container">
	    <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">
                {% for page in pages if page.id not in ['index','feed'] %}
                    <div class="col-md-6 col-lg-4">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#{{ page.id }}">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white">
                                    <i class="fas fa-plus fa-3x"></i>
                                </div>
                        </div>
                        <img src="{{ base_url ~ '/' ~ page.meta.image }}" class="img-responsive" alt="">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
